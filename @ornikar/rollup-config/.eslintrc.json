{
  "root": true,
  "extends": ["@ornikar/eslint-config/node"],
  "ignorePatterns": ["/__fixtures__"],
  "rules": {
    "security/detect-non-literal-require": "off",
    "security/detect-non-literal-fs-filename": "off"
  },
  "overrides": [
    {
      "files": ["*.test.js"],
      "extends": ["@ornikar/eslint-config/tests-override"]
    }
  ]
}
