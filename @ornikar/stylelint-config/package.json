{
  "name": "@ornikar/stylelint-config",
  "version": "8.0.0",
  "description": "stylelint config files",
  "repository": "ornikar/shared-configs",
  "main": "index.js",
  "license": "ISC",
  "engines": {
    "node": ">=14.17.5"
  },
  "scripts": {
    "lint-tests": "yarn lint-test-css-modules && yarn lint-test-styled-components",
    "lint-test-styled-components": "stylelint 'tests/styled-components/**/*.{ts,tsx}' --config ./tests/styled-components/.stylelintrc.json",
    "lint-test-css-modules": "stylelint 'tests/css-modules/**/*.css' --config ./tests/css-modules/.stylelintrc.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0"
  },
  "peerDependencies": {
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1"
  },
  "devDependencies": {
    "prettier": "2.5.1",
    "stylelint": "13.13.1"
  }
}
