{
  "name": "@ornikar/shared-configs",
  "private": true,
  "repository": "ornikar/shared-configs",
  "scripts": {
    "ornikar-lint-staged": "./@ornikar/repo-config/bin/ornikar-lint-staged.mjs",
    "version": "YARN_ENABLE_IMMUTABLE_INSTALLS=false yarn && git add yarn.lock",
    "lint": "yarn run lint:prettier && yarn run lint:eslint && yarn run lint:css",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --report-unused-disable-directives --quiet .",
    "lint:css": "yarn workspace @ornikar/stylelint-config lint-tests",
    "test": "jest",
    "release": "lerna publish --conventional-commits -m 'chore: release'",
    "postinstall": "./@ornikar/repo-config/bin/ornikar-repo-config-postinstall.js"
  },
  "prettier": "./@ornikar/prettier-config",
  "engines": {
    "node": ">=14.17.5",
    "yarn": ">=1.10.1"
  },
  "commitlint": {
    "extends": [
      "./@ornikar/commitlint-config"
    ]
  },
  "workspaces": [
    "@ornikar/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@ornikar/eslint-config": "18.12.0",
    "eslint": "8.16.0",
    "jest": "27.5.1",
    "lerna": "5.1.0",
    "lint-staged": "13.0.2",
    "prettier": "2.6.2"
  },
  "packageManager": "yarn@3.2.1"
}
